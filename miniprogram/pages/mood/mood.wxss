/* pages/mood/mood.wxss */
page{background:#f4f4f4;}
.mood-list{
  margin-top: 20px;
}
.mood-list .item{
  background-color: #fff;
  margin: 0 20px 20px;
  border-radius: 8px;
  overflow: hidden;
  padding-bottom: 14px;
}
.mood-list .item image{
  width: 100%;
  height: 200px;
}
.title{
  font-size: 15px;
  color: #333;
  margin: 4px 14px;
}
.btn{
  width: 100px;
  height: 35px;
  line-height: 35px;
  font-size: 15px;
  color: #fff;
  background-color: rgb(18, 150, 219);
  text-align: center;
  margin: 8px 14px 0;
  border-radius: 6px;
}

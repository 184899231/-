/**index.wxss**/

page {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}
.bg{
  position: fixed;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
}
.face{
  width: 100px;
  margin-top: 100px;
}
.nomain{
  color: #d4237a;
  text-align: center;
  font-size: 28rpx;
  margin-top: 20px;
}
.getuserinfo{
  position: fixed;
  left: 50%;
  margin-left: -70px;
  bottom: 260px;
  width: 140px;
  font-size: 30rpx;
  background-color: rgb(192,191,189);
  color: #666;
}
.getuserinfo::after{
  display: none
}
.music{
  position: fixed;
  z-index: 10;
  width: 60rpx;
  height: 60rpx;
  right: 30rpx;
  top: 150rpx;
}
.play{
  animation: rotate 4s linear infinite;
}
@keyframes rotate
{
    from {transform: rotateZ(0);}
    to {transform: rotateZ(360deg);}
}
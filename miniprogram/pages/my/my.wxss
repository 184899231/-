/* pages/my/my.wxss */
.header{
  width: 100%;
  height: 200px;
  position: relative;
}
.header image{
  width: 100%;
  height: 200px;
}
.avater{
  width: 76px;
  height: 76px;
  position: absolute;
  left: 40px;
  top: 40px;
  border-radius: 50%;
  overflow: hidden;
  border: 2px solid #fff;
}
.userName{
  position: absolute;
  font-size: 16px;
  color: #fff;
  width: 76px;
  text-align: center;
  left: 40px;
  top: 126px;
}
.update{
  position: relative;
  z-index: 1;
  background-color: #fff;
  margin: -30px 20px 0;
  padding: 20px 10px;
  border-radius: 10px;
  display: flex;
  box-shadow: 1px 2px 5px rgba(0,0,0,0.2);
  margin-bottom: 20px;
}
.update .item{
  width: 50%;
  text-align: center;
  font-size: 16px;
  position: relative;
}
.update .item::after{
  content: "";
  position: absolute;
  width: 1px;
  height: 30px;
  background-color: #eee;
  right: 0;
  top: 15px;
}
.update .item:last-child::after{
  display: none;
}
.update .item image{
  width: 30px;
  height: 30px;
  margin-bottom: 6px;
}
.list{
  border-top: 8px solid #eee;
}
.list .item{
  height: 56px;
  line-height: 56px;
  border-bottom: 1px solid #ddd;
  padding: 0 20px;
  font-size: 16px;
}
.list .item image.icon{
  width: 28px;
  height: 28px;
  margin-right: 6px;
  float: left;
  margin-top: 14px;
}
.list .item image.right{
  float: right;
  width: 16rpx;
  height: 24rpx;
  margin-top: 22px;
}
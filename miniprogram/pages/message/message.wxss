/* pages/message/message.wxss */
.message .item{
  border-bottom: 8px solid #eee;
  padding: 10px 15px;
}
.message .item:last-child{
  border-bottom: 0;
}
.content{
  font-size: 14px;
  line-height: 24px;
}
.publisher{
  overflow: hidden;
  margin-top: 10px;
}
.publisher .avatar{
  float: left;
  width: 34px;
  height: 34px;
  border-radius: 50%;
  overflow: hidden;
}
.publisher .avatar image{
  width: 34px;
  height: 34px;
}
.nikename{
  float: left;
  margin-left: 10px;
  line-height: 34px;
  font-size: 16px;
  color: #333;
}
.date{
  float: right;
  font-size: 14px;
  color: #333;
  line-height: 34px;
}
.height{
  height: 50px;
}
.message-btn{
  position: fixed;
  width: 100%;
  height: 50px;
  line-height: 50px;
  text-align: center;
  left: 0;
  bottom: 0;
  z-index: 9;
  background-color: rgb(18, 150, 219);
  color: #fff;
  font-size: 16px;
}
.popup{
  position: fixed;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  z-index: 10;
  background-color: rgba(51,51,51,0.7);
}
.message-dialog{
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  z-index: 11;
  background-color: #fff;
}
.textarea{
  box-sizing: border-box;
  width: 100%;
  height: 120px;
  font-size: 14px;
  padding: 8px 12px;
}
.placeholder{
  color: #ccc;
}
.confirm{
  width: 100%;
  background-color: rgb(18, 150, 219);
  color: #fff;
  font-size: 16px;
  padding: 0;
  height: 46px;
  line-height: 46px;
  border-radius: 0;
}
button::after{
  display: none;
}
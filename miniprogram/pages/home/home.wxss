/* pages/home/home.wxss */
.home{
  position: fixed;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
}
.homeBg{
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: -1;
  left: 0;
  top: 0;
  filter: blur(3px);
}
.bigImg{
  height: 200px;
  margin-left: 5%;
  margin: 100px 20px 0;
  border: 2px solid #fff;
}
.bigImg image{
  width: 100%;
  height: 200px;
  background-color: #fff;
}
.scrollView{
  width: 100%;
  margin-top: 30px;
  white-space:nowrap;
}
.scrollView .item{
  display: inline-block;
  margin-left: 14px;
  width: 140px;
  height: 90px;
  border: 2px solid #fff;
}
.scrollView .item image{
  width: 140px;
  height: 90px;
}